<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.msg" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="card">
        <item name="android:background">#1E1D1D</item>
    </style>

    <style name="cardTop">
        <item name="android:background">#191818</item>
    </style>

    <style name="textColorCustomise">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="textColorFullBlack">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackColorFullBlack">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="BackgroundTint">
        <item name="android:tint">@color/white</item>
    </style>

    <!--    background Tink orange and white-->
    <style name="BackgroundTintOrange">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/white</item>
    </style>

    <!--    chat theme background-->
    <style name="ChatBackground">
        <item name="android:background">@drawable/dark_theme</item>
    </style>

    <!--    chat box msg background.  dark orange   #281600-->
    <style name="ChatMsgContainer">
        <item name="android:background">#301a00</item>
    </style>

    <!--    Custom TabLayout-->
    <style name="CustomTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">17sp</item>

        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>