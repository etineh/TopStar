<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:clickable="false"
    android:elevation="7dp"
    android:gravity="right"
    android:paddingTop="40dp"
    android:paddingEnd="10dp"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/roundRadiusBackground2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="3dp">

        <TextView
            android:id="@+id/pinChat_TV"
            style="@style/textColorFullBlack"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/pinChat"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editChatTV"
            style="@style/textColorFullBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:text="@string/edit"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pinChat_TV" />

        <TextView
            android:id="@+id/saveToGalleryTV"
            style="@style/textColorFullBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:padding="5dp"
            android:text="@string/saveToGallery"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editChatTV" />

        <TextView
            android:id="@+id/report_TV"
            style="@style/textColorFullBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="20dp"
            android:text="@string/report"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saveToGalleryTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>