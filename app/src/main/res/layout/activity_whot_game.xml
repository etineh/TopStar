<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/card_background_portraite"
    android:layout_height="match_parent"
    tools:context=".games.whot.WhotGameActivity">


    <ImageView
        android:id="@+id/gameBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="-5dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_background_portraite" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_20dp"
        android:paddingTop="40dp"
        android:paddingEnd="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newChatCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-7dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/msg_count"
            android:elevation="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="2"
            android:textColor="@color/whitePure"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/muteIcon_IV"
            app:layout_constraintStart_toEndOf="@+id/chatIV"
            app:layout_constraintTop_toTopOf="@+id/chatIV" />

        <ImageView
            android:id="@+id/moreIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_count"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_more_horiz_24" />

        <ImageView
            android:id="@+id/speakerIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/msg_count"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/moreIV"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_campaign_24" />

        <ImageView
            android:id="@+id/audioCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/msg_count"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/videoCall"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_mic_24" />

        <ImageView
            android:id="@+id/chatIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_count"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/audioCall"
            app:layout_constraintStart_toEndOf="@+id/speakerIV"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/sym_action_chat"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/videoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_count"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_video_call_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_count"
            android:padding="5dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_video_call_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/opponentCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/whitePure"
        app:cardCornerRadius="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer">

        <ImageView
            android:id="@+id/opponentCamera"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/sp_face_in_oval" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="70dp"
        android:layout_height="101dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/opponentCardView"
        app:layout_constraintTop_toTopOf="@+id/opponentCardView"
        app:srcCompat="@drawable/card_back" />

    <TextView
        android:id="@+id/myNumberOfCardTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="center"
        android:padding="3dp"
        android:text="Rank:  Wins:"
        android:textColor="@color/whitePure"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView29"
        app:layout_constraintEnd_toStartOf="@+id/imageView29"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView29" />

    <TextView
        android:id="@+id/numberOfCardTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/card"
        android:textColor="@color/whitePure"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/opponentCardView"
        app:layout_constraintTop_toBottomOf="@+id/imageView26" />

    <ImageView
        android:id="@+id/marketCard_IV"
        android:layout_width="90dp"
        android:layout_height="111dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opponentCardView"
        app:srcCompat="@drawable/card_market" />

    <ViewStub
        android:id="@+id/await_player_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/vs_awaiting_player"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/quit_game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/vs_quit_or_start_game"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageView29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/whot_card_recy"
        tools:orientation="horizontal"
        tools:spanCount="2">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/cardPlayedIV"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marketCard_IV"
        app:layout_constraintTop_toBottomOf="@+id/opponentCardView"
        app:srcCompat="@drawable/card20" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="104dp"
        android:layout_height="92dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/gameBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sp_face_in_oval" />

</androidx.constraintlayout.widget.ConstraintLayout>