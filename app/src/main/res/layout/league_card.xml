<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="@dimen/_12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardContainer"
        style="@style/mainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/lineH"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gamePhoto_IV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/person_round"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hostTitle_TV" />

        <TextView
            android:id="@+id/hostTitle_TV"
            style="@style/textColorBlack_CoolOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxEms="17"
            android:text="Sophia Ibenyibonor Tournament"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gameType_TV"
            style="@style/TV_black_defualtWhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:text="Game: Whot"
            app:layout_constraintEnd_toStartOf="@+id/timeCreated_TV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/gamePhoto_IV"
            app:layout_constraintTop_toBottomOf="@+id/reward_TV" />

        <TextView
            android:id="@+id/entryFee_TV"
            style="@style/TV_black_defualtWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="Entry fee: $30"
            app:layout_constraintStart_toEndOf="@+id/gamePhoto_IV"
            app:layout_constraintTop_toBottomOf="@+id/hostTitle_TV" />

        <ImageView
            android:id="@+id/verifyIcon_IV"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toEndOf="@+id/hostTitle_TV"
            app:layout_constraintTop_toTopOf="@+id/hostTitle_TV"
            app:srcCompat="@drawable/verified" />

        <TextView
            android:id="@+id/playOnclick"
            style="@style/roundButtonBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/join"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/gameType_TV"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/timeCreated_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Created: 1:30 pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gameType_TV" />

        <TextView
            android:id="@+id/reward_TV"
            style="@style/TV_black_defualtWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Prize pool: $450"
            app:layout_constraintStart_toStartOf="@+id/entryFee_TV"
            app:layout_constraintTop_toBottomOf="@+id/entryFee_TV" />

        <ImageView
            android:id="@+id/shareIV"
            style="@style/Tint_Orange_CoolOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_share_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>