<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/acceptVideoCall_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/msg_count"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/whoIsRequestingVideoCall_TV"
        app:layout_constraintTop_toBottomOf="@+id/whoIsRequestingVideoCall_TV"
        app:srcCompat="@drawable/baseline_call_24" />

    <ImageView
        android:id="@+id/rejectVideoCall_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/red_circle_round"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/whoIsRequestingVideoCall_TV"
        app:layout_constraintTop_toBottomOf="@+id/whoIsRequestingVideoCall_TV"
        app:srcCompat="@drawable/baseline_call_end_24" />

    <TextView
        android:id="@+id/whoIsRequestingVideoCall_TV"
        style="@style/TextAndBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/requestForVideoCall"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <TextView
        android:id="@+id/acceptTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        app:layout_constraintEnd_toEndOf="@+id/acceptVideoCall_IV"
        app:layout_constraintStart_toStartOf="@+id/acceptVideoCall_IV"
        app:layout_constraintTop_toBottomOf="@+id/acceptVideoCall_IV" />

    <TextView
        android:id="@+id/rejectTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reject"
        app:layout_constraintEnd_toEndOf="@+id/rejectVideoCall_IV"
        app:layout_constraintStart_toStartOf="@+id/rejectVideoCall_IV"
        app:layout_constraintTop_toBottomOf="@+id/rejectVideoCall_IV" />
</androidx.constraintlayout.widget.ConstraintLayout>