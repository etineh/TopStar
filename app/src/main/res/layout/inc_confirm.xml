<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/trans_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:elevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/roundRadiusBackground2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/line_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/msg_TV"
            app:layout_constraintStart_toStartOf="@+id/msg_TV"
            app:layout_constraintTop_toBottomOf="@+id/msg_TV" />

        <TextView
            android:id="@+id/title_TV"
            style="@style/textOrangeAndCoolOrange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/deleteNow"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/msg_TV"
            style="@style/textColorFullBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/confirmMsg_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_TV"
            app:lineHeight="@dimen/_20dp" />

        <TextView
            android:id="@+id/negative_TV_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="7dp"
            android:text="@string/delete_"
            android:textColor="@color/orange"
            app:layout_constraintEnd_toStartOf="@+id/line_C"
            app:layout_constraintStart_toStartOf="@+id/msg_TV"
            app:layout_constraintTop_toBottomOf="@+id/msg_TV" />

        <TextView
            android:id="@+id/cancel_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/cancel"
            android:textColor="@color/deepGreen"
            app:layout_constraintEnd_toEndOf="@+id/msg_TV"
            app:layout_constraintStart_toEndOf="@+id/line_C"
            app:layout_constraintTop_toTopOf="@+id/negative_TV_" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>