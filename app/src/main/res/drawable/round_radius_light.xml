<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the corner radius as needed -->
            <solid android:color="@color/white" /> <!-- Orange color -->
        </shape>
    </item>
    <!-- Layer for the rest of the background -->
    <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the corner radius as needed -->
            <solid android:color="@color/orange" /> <!-- Transparent or other background color -->
        </shape>
    </item>
</layer-list>