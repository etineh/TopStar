<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    No action back for the msg view-->
    <style name="Theme.msg" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    partial white-->
    <style name="card">
        <item name="android:background">#FBF9F9</item>
    </style>

    <style name="cardTop">
        <item name="android:background">#F1EAEA</item>
    </style>

    <style name="textColorCustomise">
        <item name="android:textColor">@color/black2</item>
    </style>

    <style name="textColorFullBlack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BackColorFullBlack">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="BackgroundTint">
        <item name="android:tint">@color/black</item>
    </style>

<!--    background Tint orange and white-->
    <style name="BackgroundTintOrange">
        <item name="android:tint">@color/orange</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/black</item>
    </style>

<!--    chat theme background-->
    <style name="ChatBackground">
        <item name="android:background">@drawable/light</item>
    </style>

    <!--    chat box msg background-->
    <style name="ChatMsgContainer">
        <item name="android:background">@color/orange</item>
    </style>

<!--    Custom TabLayout-->
    <style name="CustomTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textSize">17sp</item>

        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>